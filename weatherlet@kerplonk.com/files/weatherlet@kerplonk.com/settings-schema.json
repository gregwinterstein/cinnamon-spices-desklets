    "lastUpdatePattern": {
        "type": "entry",
        "default": "\\<p class=\"lastupdate\"\\>([^>]*)\\</p\\>",
        "description": "Last Update :",
        "tooltip": "Last Update timestamp pattern",
        "expand-width": true
    },
    "offlinePattern": {
        "type": "entry",
        "default": "\\<h2\\>Closed for Cleaning\\</h2\\>",
        "description": "Offline :",
        "tooltip": "Offline pattern",
        "expand-width": true
    },
    "style-options-separator": {
        "type": "separator"
    },
    "style-options-header": {
        "type": "header",
        "description": "Style"
    },
    "font": {
        "type": "fontchooser",
        "default": "Liberation Sans 15",
        "description": "Font"
    },
    "font-color": {
        "type": "colorchooser",
        "default": "rgb(255,255,255)",
        "description": "Font color",
        "tooltip": "Font color"
    },
    "background-color": {
        "type": "colorchooser",
        "indent": true,
        "default": "rgb(0,0,0)",
        "description": "Background color",
        "tooltip": "Click to select the background color"
    },
    "background-transparency": {
        "type": "scale",
        "indent": true,
        "default": 0.5,
        "min": 0.0,
        "max": 1.0,
        "step": 0.05,
        "description": "Transparency",
        "tooltip": "Transparency of the desklet"
    },
    "border-color": {
        "type": "colorchooser",
        "indent": true,
        "default": "rgb(255,255,255)",
        "description": "Border color",
        "tooltip": "Click to select the border color"
    },
    "border-width": {
        "type": "spinbutton",
        "default": 2,
        "min": 0,
        "max": 200,
        "units": "px",
        "description": "Border width",
        "step": 1
    }
