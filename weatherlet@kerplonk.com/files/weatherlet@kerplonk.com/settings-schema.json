                "measureAlignRight": true,
                "indent": false,
                "smaller": false,
                "isSeparator": false
            },
            {
                "label": "Rain Rate:",
                "labelAlignRight": false,
                "regex": "\\<td class=\"label\"\\>Rain Rate\\</td\\>\\s*\\<td class=\"data\"\\>([^>]*)\\</td\\>",
