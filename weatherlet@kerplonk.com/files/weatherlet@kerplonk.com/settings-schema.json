{
    "top": {
        "type": "header",
        "description": "Weatherlet configuration"
    },
    "url": {
        "type": "entry",
        "default": "https://localhost/weather/",
        "description": "Weather server URL :",
        "tooltip": "Weather server URL",
        "expand-width": true
    },
    "delay": {
        "default": 60,
        "type": "spinbutton",
        "min": 1,
        "max": 3600,
        "description": "Update every",
        "units": "seconds",
        "step": 10
    },
    "timeout": {
        "default": 30,
        "type": "spinbutton",
        "min": 1,
        "max": 1440,
        "description": "Cancel command after",
        "units": "seconds",
        "step": 5
    },
    "measureConfigs": {
        "type": "list",
        "description": "Measures",
        "columns": [
            {
                "id": "label",
                "title": "Label",
                "type": "string"
            },
            {
                "id": "labelAlignRight",
                "title": "Align label right",
                "type": "boolean"
            },
            {
                "id": "regex",
                "title": "Regex Pattern",
                "type": "string"
            },
            {
                "id": "measureAlignRight",
                "title": "Align measurement right",
                "type": "boolean"
            },
            {
                "id": "indent",
                "title": "Indent",
                "type": "boolean"
            },
            {
                "id": "smaller",
                "title": "Smaller",
                "type": "boolean"
            },
            {
                "id": "isSeparator",
                "title": "Separator",
                "type": "boolean"
            }
        ],
        "default": [
            {
                "label": "Temperature:",
                "labelAlignRight": false,
