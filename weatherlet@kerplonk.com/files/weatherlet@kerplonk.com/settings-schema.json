                "measureAlignRight": true,
                "indent": false,
                "smaller": false,
                "isSeparator": false
            },
            {
                "label": "Barometer:",
                "labelAlignRight": false,
                "regex": "\\<td class=\"label\"\\>Barometer\\</td\\>\\s*\\<td class=\"data\"\\>([^>]*)\\</td\\>",
                "measureAlignRight": true,
                "indent": false,
                "smaller": false,
